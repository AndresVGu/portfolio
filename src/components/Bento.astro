        </BentoItem>

      <!--group 3-->
        <!--Vit Green -->      
        <BentoItem class="col-span-5 md:col-span-3" title="VitGreen" subtitle="Ecomerce Website">
          <div
            slot="image"
            class="background transition-scale absolute bottom-0 left-0 top-0
              -z-10 h-full w-full 
              bg-cover bg-center bg-no-repeat opacity-90 bg-blend-luminosity duration-700 ease-in-out group-hover:scale-105 "
            style="background-image: url('/projects/vit.webp');">
          </div>
        </BentoItem>
        
        <!--V12 MAGAZINE -->
        <BentoItem class="col-span-5 md:col-span-2" title="V12Revista - Car Magazine" subtitle="Car Magazine">
          <div
          slot="image"
          class="background transition-scale absolute bottom-0 left-0 top-0
            -z-10 h-full w-full 
            bg-cover bg-center bg-no-repeat opacity-90 bg-blend-luminosity duration-700 ease-in-out group-hover:scale-105 "
          style="background-image: url('/projects/TEST2.webp');">
