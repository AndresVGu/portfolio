---
const Languages = ["English","French","Spanish"]
---
<div class="relative ml-1 mr-1">
    <button
    id="dropdown-language"
    class="appearance-none border-none flex
    transition hover:text-yellow-500
                dark:hover:text-yellow-400">

    Language
    </button>
    <div
    id="language-menu"
    class="absolute hidden scale-80 top-8 right-0 text-sm p-1 min-w-[8rem] rounded-md border border-gray-100 bg-white/90 dark:bg-gray-900/90 dark:border-gray-500/20 shadow-[0_3px_10px_rgb(0,0,0,0.2)] backdrop-blur-md">
        <ul>
            {
                Languages.map((languages)=>(
                    <li class="language-menu-option px-2 py-1.5 cursor-default hover:bg-neutral-400/40 dark:hover:bg-gray-500/50 rounded-sm">
                    {languages}
                    </li>
                ))
            }
        </ul>
    </div>   
</div>

<style>
    #language-menu.open {
      display: inline;
      animation: scale-up-center 0.15s cubic-bezier(0.25, 0.46, 0.45, 0.94) both;
    }
  
    @keyframes scale-up-center {
      from {
        transform: scale(0.8);
        opacity: 0;
      }
  
      to {
        transform: scale(1);
        opacity: 1;
      }
    }
  </style>

  <script is:inline>
   
    const lanMenu = document.getElementById("language-menu");

    document.addEventListener("click", ()=> lanMenu.classList.remove("open"))

    document.getElementById("dropdown-language").addEventListener("click", (e)=>{
        e.stopPropagation()
        const closed = !lanMenu.classList.contains("open")
        lanMenu.classList[closed ? "add" : "remove"]("open")
    })

     document.querySelectorAll(".language-menu-option").forEach((element) => {
    element.addEventListener("click", (e) => {
      localStorage.setItem("theme", e.target.innerText.toLowerCase().trim())
      
    })
  })
  </script>