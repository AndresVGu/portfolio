---
import Layout from '../layouts/Layout.astro';
import Briefcase from '../Icons/Briefcase.astro';
import EduIcon from '../Icons/PapersIcon.astro';
import CodeIcon from '../Icons/Code.astro';
import Experience from '../components/TimeLine.astro';
import Education from '../components/Education.astro';
import SectionContainer from '../components/SectionContainer.astro';
import Profile from '../components/Profile.astro';
import Projects from '../components/Projects.astro';
import About from '../components/About.astro';
import Bento from '../components/Bento.astro';
import ProfileIcon from '../Icons/ProfileIcon.astro';
import Certificates from '@/components/Certificates.astro';
import Menu from '@/components/Icons/Menu.astro';


---

<Layout 
title="Andres Villarreal - Software and Website Developer with 3 years of experience"
description="Junior Developer with strong expertice in Fullstack developing with knwoledge in C#, ASP.NET MVC, Web APIs and more">
	<main class="px-5">

		 
		 

		<SectionContainer class="py-16 md:py-36 animate-fade-right animate-duration-1500" id="home">
			<Profile>
				<slot />
			</Profile>
		</SectionContainer>
		
		<div class="space-y-24">
			<SectionContainer id="education">
				<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-yellow-300">
					<EduIcon class="size-7" />
					Education
				</h2>
				<Education />
				<br>
				<h3 class="flex items-center mb-6 text-2xl font-semibold gap-x-3 text-black/80 dark:text-yellow-300">
					Certificates
				</h3>
				<Certificates/>
			</SectionContainer>


			<SectionContainer id="experience">
				<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-yellow-300">
					<Briefcase class="size-7" />
					Experience
				</h2>
				<Experience />
			</SectionContainer>


			<SectionContainer id="projects">
				<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-yellow-300">
					<CodeIcon class="size-7" />
					Projects
					
				</h2>
				<Bento />
				<!--
				
				<Projects />
				-->
			</SectionContainer>


			<SectionContainer id="about">
				<h2 class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-yellow-300">
					<ProfileIcon class="size-7" />
					About Me
					
				</h2>
				<About />
		
			</SectionContainer>

			

		</div>
		
	</main>
</Layout>
